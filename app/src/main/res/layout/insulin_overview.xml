<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/insulin_overview_vertical_layout"
    >

    <TextView
        android:id="@+id/insulin_overview_meal_type_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_target_food_textview"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="@string/edit_meal_type_food_target"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/insulin_overview_target_food_value_textview"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_target_food_unit_textview"
            android:paddingLeft="5sp"
            android:layout_width="90sp"
            android:text="@string/insulin_overview_target_food_unit"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_insulin_sensitivity_textview"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="@string/edit_meal_type_insulin_sensitivity"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/insulin_overview_insulin_sensitivity_value_textview"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_insulin_sensitivity_unit_textview"
            android:paddingLeft="5sp"
            android:layout_width="90sp"
            android:text="@string/insulin_overview_sensitivity_unit"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_glycemia_target_textview"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="@string/edit_meal_type_glycemia_target"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/insulin_overview_glycemia_target_value_textview"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_glycemia_target_unit_textview"
            android:paddingLeft="5sp"
            android:layout_width="90sp"
            android:text="@string/insulin_overview_glycemia_target_unit"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_insulin_textview"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="@string/edit_meal_type_insulin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/insulin_overview_insulin_value_textview"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_insulin_unit_textview"
            android:paddingLeft="5sp"
            android:layout_width="90sp"
            android:text="@string/insulin_overview_insulin_unit"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_title_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:text="@string/insulin_overview_recap_glycemia"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_title_textview"
            android:paddingRight="20sp"
            android:text="@string/insulin_overview_recap_insulin"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_unit_title_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:text="@string/insulin_overview_recap_glycemia_unit"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_unit_title_textview"
            android:paddingRight="20sp"
            android:text="@string/insulin_overview_recap_insulin_unit"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_first_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_first_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_second_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_second_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_third_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_third_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_fourth_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_fourth_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_fifth_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_fifth_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/insulin_overview_recap_glycemia_sixth_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="right" />
        <TextView
            android:id="@+id/insulin_overview_recap_insulin_sixth_textview"
            android:paddingRight="20sp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>
