<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/new_meal_third_step_vertical_layout"
    >

    <TextView
        android:id="@+id/new_meal_third_step_meal_type_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/new_meal_third_step_title"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/new_meal_third_step_carbohydrate_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_third_step_carbohydrate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/new_meal_third_step_insulin_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_third_step_insulin"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/new_meal_third_step_glycemia_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:text="@string/new_meal_third_step_glycemia"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/new_meal_third_step_carbohydrate_container"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/new_meal_third_step_carbohydrate_value_textview"
            android:layout_width="0dp"
            android:layout_weight=".60"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/new_meal_third_step_carbohydrate_unit_textview"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/new_meal_third_step_insulin_container"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/new_meal_third_step_insulin_value_textview"
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_meal_third_step_insulin_unit_textview"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/new_meal_third_step_glycemia_container"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/new_meal_third_step_glycemia_value_textview"
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_meal_third_step_glycemia_unit_textview"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"

        >
        <TextView
            android:id="@+id/new_meal_third_step_bolus_given_textview"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_third_step_bolus_given"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/new_meal_third_step_bolus_given_edittext"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
        <TextView
            android:id="@+id/new_meal_third_step_bolus_given_unit_textview"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_third_step_bolus_unit"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        >

        <TextView
            android:id="@+id/new_meal_third_step_percentage_difference_textview"
            android:gravity="center_horizontal|center_vertical"
            android:text="0.00 %"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"

        >
        <TextView
            android:id="@+id/new_meal_third_step_seekbar_minus_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_marginLeft="30sp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="-30%"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/new_meal_third_step_seekbar_zero_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:gravity="center_horizontal|center_vertical"
            android:text="0%"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/new_meal_third_step_seekbar_plus_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_marginRight="30sp"
            android:gravity="right|center_vertical"
            android:text="+30%"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <SeekBar
            android:id="@+id/seek_bolus_adjust"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:max="60"
            android:progress="30" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Switch
            android:id="@+id/send_meal_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:switchMinWidth="56dp"
            android:text="@string/send_meal_switch"
            android:textSize="20sp"
            android:checked="false" />

        <TextView
            android:id="@+id/send_meal_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/send_meal_switch"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="ON"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</LinearLayout>
