<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/conditions_generales_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/conditions_generales"
        android:textSize="20sp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

    <Button
        android:id="@+id/accepter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_kaki"
        android:text="@string/accepter_conditions" />

    <Button
        android:id="@+id/refuser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="@string/refuser_conditions" />
        </LinearLayout>
</LinearLayout>
