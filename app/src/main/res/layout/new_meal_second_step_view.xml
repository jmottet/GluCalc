<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/new_meal_second_step_vertical_layout"
    >

    <TextView
        android:id="@+id/new_meal_second_step_meal_type_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/new_meal_second_step_carbohydrate_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_second_step_carbohydrate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/new_meal_second_step_insulin_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_second_step_insulin"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/new_meal_second_step_glycemia_textview"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:text="@string/new_meal_second_step_glycemia"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/new_meal_second_step_carbohydrate_container"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/new_meal_second_step_carbohydrate_value_textview"
            android:layout_width="0dp"
            android:layout_weight=".60"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/new_meal_second_step_carbohydrate_unit_textview"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/new_meal_second_step_insulin_container"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/new_meal_second_step_insulin_value_textview"
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_meal_second_step_insulin_unit_textview"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/new_meal_second_step_glycemia_container"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/new_meal_third_step_glycemia_value_textview"
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_meal_third_step_glycemia_unit_textview"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_grey_800"
        >
        <!--<Button
            android:id="@+id/new_meal_second_step_modify_button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_second_step_modify"/> -->
        <TextView
            android:id="@+id/new_meal_second_step_food_title"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:paddingLeft="10dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/new_meal_second_step_food"
            android:textSize="20sp"
            />
<!--
        <item android:id="@+id/selection_performed"
            android:title="@string/select_performed_title"
            android:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:showAsAction="collapseActionView|ifRoom"
            />

        <item android:id="@+id/delete"
            android:title="@string/delete_title"
            android:icon="@android:drawable/ic_menu_delete"
            app:showAsAction="collapseActionView|ifRoom"
            /> -->

        <Button
            android:id="@+id/new_meal_second_step_select_button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/new_meal_second_step_select"
            android:textColor="@color/accentColor"/>

        <ImageButton
            android:id="@+id/new_meal_second_step_unselect_button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageButton
            android:id="@+id/new_meal_second_step_add_button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:src="@android:drawable/ic_menu_add"/>

        <ImageButton
            android:id="@+id/new_meal_second_step_delete_button"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:src="@android:drawable/ic_menu_delete"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/new_meal_second_step_food_quantity"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_second_step_quantity"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/new_meal_second_step_food_carbohydrate"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content"
            android:text="@string/new_meal_second_step_carbohydrate"
            android:gravity="center"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/layoutshape"
        >
    </LinearLayout>

    <FrameLayout
        android:id="@+id/new_meal_second_step_food_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </FrameLayout>

</LinearLayout>
